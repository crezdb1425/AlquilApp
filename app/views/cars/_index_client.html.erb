<div class="container">
  <span class="add-car-span">
    <h2>Listado de Automoviles</h2>
  </span>
  <% if @cars.nil? %>
    <h1> No hay autos disponibles en un radio de 5 cuadras de su ubicacion actual, si desea ver todos los autos disponibles mas alla del radio de 5 cuadras </h1>
     <td><%= link_to "+ Ver mÃ¡s autos", index_20_path ,  class: 'btn' %></td>
  <% end%>
  <table class="table">
    <tr>
      <thead>
        <th>Imagen: </th>
        <th>Numero de auto: </th>
        <th>Color: </th>
        <th>Patente: </th>
        <th>Marca: </th>
        <th>Modelo: </th>
        <th>Seguro: </th>
        <th>Kilometros: </th>
      </thead>
    </tr>
  </table>
  <% @cars.each do |c| %>
    <table class="table">
      <tr>
        <td><%= image_tag c.photo.url(:thumb).to_s %></td>
        <td><%= c.car_number %></td>
        <td><%= c.color %></td>
        <td><%= c.plate %></td>
        <td><%= c.brand %></td>
        <td><%= c.model %></td>
        <td><%= c.insurance %></td>
        <td><%= c.kilometers %></td>
    </tr>
    </table>
  <% end %>
</div>