<%= form_with model: klass, url: url, method: method, local: true do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name, class: 'form-control' %>
  <div class='error_message'><%= @user.errors[:first_name].to_sentence %></div>

  <%= f.label :last_name %>
  <%= f.text_field :last_name, class: 'form-control' %>
  <div class='error_message'><%= @user.errors[:last_name].to_sentence %></div>

  <%= f.label :dni %>
  <%= f.text_field :dni, class: 'form-control', disabled: true %>
  <div class='error_message'><%= @user.errors[:dni].to_sentence %></div>

  <%= f.label 'Fecha de nacimiento' %>
  <%= f.date_field :birthday, class: 'form-control' %>
  <div class='error_message'><%= @user.errors[:birthday].to_sentence %></div>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control', disabled: true %>
  <div class='error_message'><%= @user.errors[:email].to_sentence %></div>

  <%= f.label :role %>
  <%= f.select :role, [['Cliente', 'client'], ['Supervisor', 'supervisor'], ['Admin', 'admin']], class: 'form-select' %>
  <div class='error_message'><%= @user.errors[:role].to_sentence %></div>

  <div class="form-submit-close-btns">
    <%= f.submit 'Actualizar usuario', class:'btn new_user' %>
    <button data-action="click->turbomodals#submitEnd" class="btn new_user">Cerrar</button>
  </div>
<% end %>
