<h1 id="page-title">Login</h1>


<%= form_tag user_sessions_path, method: :post do |f| %>
  <section>
    <div class="row">
      <div class="col-md-4 form-group">
        <%= label_tag 'Email' %>
        <%= email_field_tag :email, nil, class: 'form-control', required: true %>
      </div>
      <div class="col-md-4 form-group">
        <%= label_tag 'Contraseña' %>
        <%= password_field_tag :password, nil, class: 'form-control', required: true %>
      </div>
      <%= submit_tag 'Log In', class: 'btn btn-primary btn-lg' %>
    </div>
  </section>
<% end %>

<div>
  <p>Todavía no tenes tu cuenta! Registrate! <%= link_to "Register", new_user_path, id: "register-user" %></p>
</div>